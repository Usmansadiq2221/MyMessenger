<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myFavDark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.UserProfileActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/_userProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/image_back_file"
        android:padding="5dp"
        android:src="@drawable/profile_placeholder"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@color/myFavLight"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/_userActualName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/myFavPink"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="34dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/button_rest" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Name:"
            android:textColor="@color/myFavPink"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/myFavPink"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/button_rest" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Phone no:"
            android:textColor="@color/myFavPink"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/_userPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/myFavPink"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/button_rest" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>